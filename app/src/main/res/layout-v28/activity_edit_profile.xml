<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.edit_profile.view.EditProfileActivity">

    <include layout="@layout/toolsbar" />


    <androidx.core.widget.NestedScrollView
        android:id="@+id/pageSetting"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_gray"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/background_white"
                android:gravity="center"
                android:paddingStart="@dimen/View8dp"
                android:paddingTop="@dimen/View8dp"
                android:paddingEnd="@dimen/View8dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/View8dp"
                    android:layout_weight="1"
                    android:elevation="10dp"
                    app:cardCornerRadius="10dp">

                    <ImageView
                        android:id="@+id/Image1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:background="@drawable/border3"
                        android:src="@drawable/tran" />

                    <ImageView
                        android:id="@+id/add1"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_add" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|start"
                        android:background="@drawable/tag_image"
                        android:gravity="center"
                        android:paddingStart="@dimen/View4dp"
                        android:paddingTop="1dp"
                        android:paddingEnd="@dimen/View4dp"
                        android:paddingBottom="1dp"
                        android:text="@string/main_image"
                        android:textColor="@color/white"
                        android:textSize="@dimen/Text14sp" />


                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/View8dp"
                    android:layout_weight="1"
                    android:elevation="10dp"
                    app:cardCornerRadius="10dp">

                    <ImageView
                        android:id="@+id/Image2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:background="@drawable/border3"
                        android:src="@drawable/tran" />

                    <ImageView
                        android:id="@+id/add2"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_add" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/View8dp"
                    android:layout_weight="1"
                    android:elevation="10dp"
                    app:cardCornerRadius="10dp">

                    <ImageView
                        android:id="@+id/Image3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:background="@drawable/border3"
                        android:src="@drawable/tran" />

                    <ImageView
                        android:id="@+id/add3"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_add" />
                </androidx.cardview.widget.CardView>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/background_white"
                android:gravity="center"
                android:paddingStart="@dimen/View8dp"
                android:paddingEnd="@dimen/View8dp"
                android:paddingBottom="@dimen/View8dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/View8dp"
                    android:layout_weight="1"
                    android:elevation="10dp"
                    app:cardCornerRadius="10dp">

                    <ImageView
                        android:id="@+id/Image4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:background="@drawable/border3"
                        android:src="@drawable/tran" />

                    <ImageView
                        android:id="@+id/add4"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_add" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/View8dp"
                    android:layout_weight="1"
                    android:elevation="10dp"
                    app:cardCornerRadius="10dp">

                    <ImageView
                        android:id="@+id/Image5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:background="@drawable/border3"
                        android:src="@drawable/tran" />

                    <ImageView
                        android:id="@+id/add5"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_add" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/View8dp"
                    android:layout_weight="1"
                    android:elevation="10dp"
                    app:cardCornerRadius="10dp">

                    <ImageView
                        android:id="@+id/Image6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:background="@drawable/border3"
                        android:src="@drawable/tran" />

                    <ImageView
                        android:id="@+id/add6"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_add" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/linearLayout4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="vertical"

                android:paddingStart="@dimen/View16dp"
                android:paddingTop="@dimen/View8dp"
                android:paddingEnd="@dimen/View16dp"
                android:paddingBottom="@dimen/View8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout3">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/about_me"
                    android:textSize="@dimen/Text14sp" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"

                app:layout_constraintTop_toBottomOf="@+id/linearLayout4">

                <com.siravit.dessert.utils.CustomEdittext
                    android:id="@+id/editText2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/background_white"
                    android:ems="10"
                    android:gravity="top"
                    android:hint="@string/Introduce_yourself"
                    android:inputType="textMultiLine"
                    android:maxLength="200"
                    android:minHeight="100dp"
                    android:paddingStart="@dimen/View16dp"
                    android:paddingTop="@dimen/View8dp"
                    android:paddingEnd="@dimen/View16dp"
                    android:paddingBottom="@dimen/View8dp"
                    android:textColor="#A3A3A3"
                    android:textColorHint="@color/c1"
                    android:textSize="@dimen/Text16sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout6"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingStart="@dimen/View16dp"
                android:paddingTop="@dimen/View8dp"
                android:paddingEnd="@dimen/View16dp"
                android:paddingBottom="@dimen/View8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout5">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/study_career"
                    android:textSize="@dimen/Text14sp" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/background_white"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout6">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/View16dp"
                    android:paddingTop="@dimen/View8dp"
                    android:paddingEnd="@dimen/View16dp"
                    android:paddingBottom="@dimen/View8dp"
                    android:text="@string/current_work"
                    android:textColor="@color/text_black_gray"
                    android:textSize="@dimen/Text16sp" />

                <com.siravit.dessert.utils.CustomEdittext
                    android:id="@+id/career"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/background_white"
                    android:ems="10"
                    android:hint="@string/add"
                    android:inputType="textMultiLine"
                    android:maxLength="100"
                    android:paddingStart="@dimen/View16dp"
                    android:paddingEnd="@dimen/View16dp"
                    android:paddingBottom="@dimen/View8dp"
                    android:textColor="@color/text_gray"
                    android:textColorHint="@color/c3"
                    android:textSize="@dimen/Text16sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:background="@color/background_white"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout7">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/View16dp"
                    android:paddingTop="@dimen/View8dp"
                    android:paddingEnd="@dimen/View16dp"
                    android:paddingBottom="@dimen/View8dp"
                    android:text="@string/school"
                    android:textColor="@color/text_black_gray"
                    android:textSize="@dimen/Text16sp" />

                <com.siravit.dessert.utils.CustomEdittext
                    android:id="@+id/study"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/background_white"
                    android:ems="10"
                    android:hint="@string/add"
                    android:inputType="textMultiLine"
                    android:maxLength="100"
                    android:paddingStart="@dimen/View16dp"
                    android:paddingEnd="@dimen/View16dp"
                    android:paddingBottom="@dimen/View8dp"
                    android:textColor="@color/text_gray"
                    android:textColorHint="@color/c3"
                    android:textSize="@dimen/Text16sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout9"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingStart="@dimen/View16dp"
                android:paddingTop="@dimen/View8dp"
                android:paddingEnd="@dimen/View16dp"
                android:paddingBottom="@dimen/View8dp"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout8">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/basic_infomation"
                    android:textSize="@dimen/Text14sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/background_white"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout9">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/View16dp"
                    android:paddingTop="@dimen/View8dp"
                    android:paddingEnd="@dimen/View16dp"
                    android:paddingBottom="@dimen/View8dp"
                    android:text="@string/name"
                    android:textColor="@color/text_black_gray"
                    android:textSize="@dimen/Text16sp" />

                <com.siravit.dessert.utils.CustomEdittext
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/background_white"
                    android:ems="10"
                    android:hint="@string/add"
                    android:inputType="textMultiLine"
                    android:maxLength="30"
                    android:paddingStart="@dimen/View16dp"
                    android:paddingEnd="@dimen/View16dp"
                    android:paddingBottom="@dimen/View8dp"
                    android:textColor="@color/text_gray"
                    android:textColorHint="@color/c4"
                    android:textSize="@dimen/Text16sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:background="@color/background_white"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout10">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/View16dp"
                    android:paddingTop="@dimen/View8dp"
                    android:paddingEnd="@dimen/View16dp"
                    android:paddingBottom="@dimen/View8dp"
                    android:text="@string/language_profile"
                    android:textColor="@color/text_black_gray"
                    android:textSize="@dimen/Text16sp" />

                <TextView
                    android:id="@+id/language"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:hint="@string/add"
                    android:paddingStart="20dp"
                    android:paddingEnd="10dp"
                    android:paddingBottom="@dimen/View8dp"
                    android:textColor="@color/text_gray"
                    android:textColorHint="@color/c4"
                    android:textSize="@dimen/Text16sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:background="@color/background_white"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout11">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/View16dp"
                    android:paddingTop="@dimen/View8dp"
                    android:paddingEnd="@dimen/View16dp"
                    android:paddingBottom="@dimen/View8dp"
                    android:text="@string/religion"
                    android:textColor="@color/text_black_gray"
                    android:textSize="@dimen/Text16sp" />

                <TextView
                    android:id="@+id/religion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/add"
                    android:paddingStart="@dimen/View16dp"
                    android:paddingEnd="@dimen/View16dp"
                    android:paddingBottom="@dimen/View8dp"
                    android:textColor="@color/text_gray"
                    android:textColorHint="@color/c4"
                    android:textSize="@dimen/Text16sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout13"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingStart="@dimen/View16dp"
                android:paddingTop="@dimen/View8dp"
                android:paddingEnd="@dimen/View16dp"
                android:paddingBottom="@dimen/View8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout12">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Interests"
                    android:textSize="@dimen/Text14sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:minHeight="50dp"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout13">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/View16dp"
                    android:paddingTop="@dimen/View8dp"
                    android:paddingEnd="@dimen/View16dp"
                    android:paddingBottom="@dimen/View8dp"
                    android:text="@string/Interests"
                    android:textColor="@color/text_black_gray"
                    android:textSize="@dimen/Text16sp" />

                <com.google.android.flexbox.FlexboxLayout
                    android:id="@+id/Grid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/View16dp"
                    android:paddingEnd="@dimen/View16dp"
                    android:paddingBottom="48dp"
                    android:textSize="@dimen/Text16sp"
                    app:alignContent="flex_start"
                    app:alignItems="flex_start"
                    app:flexWrap="wrap" />
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>