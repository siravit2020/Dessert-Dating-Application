<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".ui.register.view.RegistrationActivity">


    <include layout="@layout/toolsbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_marginHorizontal="@dimen/View32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/View4dp"
            android:text="Register"
            android:textColor="@color/text_black_gray"
            android:textSize="30dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/View16dp"
            android:layout_marginBottom="@dimen/View24dp"
            android:gravity="center"

            android:text="โปรดใช้อีเมลที่สามารถใช้งานได้จริง เนื่องจากต้องมีการยืนยันบัญชีผู้ใช้งาน"
            android:textAlignment="center"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/Text16sp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginLeft="@dimen/View20dp"
            android:layout_marginBottom="@dimen/View8dp"
            android:text="Email"/>
        <EditText
            android:id="@+id/email_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/input_field"
            android:importantForAutofill="no"
            android:inputType="textEmailAddress"
            android:maxLength="50"
            android:paddingLeft="@dimen/View20dp"
            android:paddingTop="@dimen/View8dp"
            android:paddingRight="@dimen/View20dp"
            android:paddingBottom="@dimen/View8dp"
            android:layout_marginBottom="@dimen/View12dp"
            android:textSize="@dimen/Text16sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginLeft="@dimen/View20dp"
            android:layout_marginBottom="@dimen/View8dp"
            android:text="Password"/>
        <EditText
            android:id="@+id/password_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/input_field"
            android:importantForAutofill="no"
            android:inputType="textPassword"
            android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
            android:maxLength="20"
            android:layout_marginBottom="@dimen/View12dp"
            android:paddingLeft="@dimen/View20dp"
            android:paddingTop="@dimen/View8dp"
            android:paddingRight="@dimen/View20dp"
            android:paddingBottom="@dimen/View8dp"
            android:textSize="@dimen/Text16sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginLeft="@dimen/View20dp"
            android:layout_marginBottom="@dimen/View8dp"
            android:text="Confirm Password"/>
        <EditText
            android:id="@+id/confirm_password_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/input_field"
            android:importantForAutofill="no"
            android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
            android:inputType="textPassword"
            android:maxLength="20"
            android:paddingLeft="@dimen/View20dp"
            android:paddingTop="@dimen/View8dp"
            android:paddingRight="@dimen/View20dp"
            android:paddingBottom="@dimen/View8dp"
            android:textSize="@dimen/Text16sp" />

        <Button
            android:id="@+id/finish_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/View32dp"
            android:text="@string/finish"
            android:textColor="@color/cpb_white"
            android:textSize="@dimen/Text16sp" />
    </LinearLayout>





</androidx.constraintlayout.widget.ConstraintLayout>