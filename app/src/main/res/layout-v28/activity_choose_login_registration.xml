<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".ChooseLoginRegistrationActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ImageView
            android:layout_width="124dp"
            android:layout_marginRight="100dp"
            android:layout_marginLeft="100dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:clickable="false"

            android:src="@drawable/ic_candy" />

        <TextView

            android:id="@+id/clickToTest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Click to testLogin"
            android:textColor="@color/text_black_gray"
            android:textSize="18dp"
            android:layout_marginTop="@dimen/View20dp"
            />
        <LinearLayout
            android:id="@+id/testlogin"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/View8dp"
            android:gravity="center"
            >
            <Button
                android:id="@+id/button3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/View8dp"
                android:layout_marginBottom="@dimen/View8dp"
                android:layout_marginRight="@dimen/View20dp"
                android:paddingRight="@dimen/View32dp"
                android:paddingLeft="@dimen/View32dp"
                android:translationZ="@dimen/View4dp"
                android:background="@drawable/myrect"
                android:text="เข้าสู่ระบบ"

                android:textColor="@color/text_black_gray" />

            <Button
                android:id="@+id/button4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/View8dp"
                android:layout_marginBottom="@dimen/View8dp"
                android:paddingRight="@dimen/View32dp"
                android:paddingLeft="@dimen/View32dp"
                android:layout_marginStart="@dimen/View20dp"
                android:translationZ="4dp"
                android:background="@drawable/myrect"
                android:text="สมัครสมาชิก"

                android:textColor="@color/text_black_gray" />
        </LinearLayout>


        <LinearLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginRight="@dimen/View20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="@dimen/View32dp"
            android:gravity="center"
            >
            <View
                android:layout_width="20dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="#80000000"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Login with"
                android:textSize="@dimen/Text16sp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="@dimen/View20dp"


                android:textColor="@color/text_black_gray"

                />
            <View
                android:layout_width="20dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="#80000000"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/face"
            android:layout_marginTop="@dimen/View20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/myrect"
            android:paddingTop="@dimen/View8dp"
            android:paddingBottom="@dimen/View8dp"
            android:paddingEnd="@dimen/View16dp"
            android:paddingStart="@dimen/View16dp"
            android:backgroundTint="#3C6CFF"
            android:elevation="@dimen/View4dp"
            android:layout_marginEnd="@dimen/View40dp"
            android:layout_marginStart="@dimen/View40dp"
            android:gravity="center"
            >
            <ImageView
                android:layout_width="@dimen/View36dp"
                android:layout_height="@dimen/View36dp"
                android:layout_marginEnd="@dimen/View8dp"
                android:layout_marginStart="@dimen/View8dp"
                android:src="@drawable/ic_facebook3"/>
            <TextView
                android:layout_marginEnd="@dimen/View8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Signin with Facebook"
                android:textColor="@color/white"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/google"
            android:layout_marginTop="@dimen/View16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/myrect"
            android:paddingTop="@dimen/View8dp"
            android:paddingBottom="@dimen/View8dp"
            android:paddingEnd="@dimen/View16dp"
            android:paddingStart="@dimen/View16dp"
            android:backgroundTint="#FFFFFF"
            android:elevation="@dimen/View4dp"
            android:layout_marginEnd="@dimen/View40dp"
            android:layout_marginStart="@dimen/View40dp"
            android:gravity="center"
            >
            <ImageView
                android:layout_width="@dimen/View36dp"
                android:layout_height="@dimen/View36dp"
                android:layout_marginStart="@dimen/View8dp"
                android:layout_marginEnd="@dimen/View8dp"
                android:src="@drawable/ic_search"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/View8dp"
                android:gravity="center"
                android:text="Signin with google   "
                android:textColor="@color/text_black_gray"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/button7"
            android:layout_marginTop="@dimen/View16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/myrect"
            android:paddingTop="@dimen/View8dp"
            android:paddingBottom="@dimen/View8dp"
            android:paddingEnd="@dimen/View16dp"
            android:paddingStart="@dimen/View16dp"
            android:backgroundTint="@color/text_black_gray"
            android:elevation="@dimen/View4dp"
            android:layout_marginEnd="@dimen/View40dp"
            android:layout_marginStart="@dimen/View40dp"
            android:gravity="center"
            >
            <ImageView
                android:layout_width="@dimen/View36dp"
                android:layout_height="@dimen/View36dp"
                android:layout_marginEnd="@dimen/View8dp"
                android:layout_marginStart="@dimen/View8dp"
                android:src="@drawable/ic_phone"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/View8dp"
                android:gravity="center"
                android:text="@string/signin_phone"
                android:textColor="@color/white"
                />
        </LinearLayout>


        <LinearLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="@dimen/View40dp"
            >
            <ImageView

                android:layout_width="45dp"
                android:layout_height="45dp"
                android:clickable="false"
                android:src="@drawable/ic_facebook" />
            <ImageView

                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginRight="@dimen/View32dp"
                android:layout_marginLeft="@dimen/View32dp"
                android:clickable="false"
                android:src="@drawable/ic_search"/>
            <ImageView

                android:layout_width="45dp"
                android:layout_height="45dp"
                android:clickable="false"
                android:src="@drawable/ic_phone" />
        </LinearLayout>






    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/View8dp"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Language"
            android:textSize="18dp"
            android:textColor="@color/text_black_gray"
            android:layout_marginRight="@dimen/View8dp"/>
        <TextView
            android:id="@+id/thai_lang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ไทย"
            android:textSize="@dimen/Text16sp"
            android:textColor="@color/c4"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="|"
            android:textSize="@dimen/Text16sp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="@dimen/View4dp"
            android:textColor="@color/text_black_gray"
            />
        <TextView
            android:id="@+id/eng_lang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="English"
            android:textSize="@dimen/Text16sp"
            android:textColor="@color/c4"
            />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>