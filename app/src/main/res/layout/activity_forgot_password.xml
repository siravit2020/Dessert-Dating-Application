<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.forgot_password.view.ForgotPasswordActivity">

    <include

        layout="@layout/toolsbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/View4dp"
            android:text="Your Email"
            android:textColor="@color/text_black_gray"
            android:textSize="30dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/View32dp"
            android:layout_marginRight="@dimen/View32dp"
            android:layout_marginBottom="@dimen/View32dp"
            android:gravity="center"
            android:maxEms="14"
            android:text="ระบบจะส่ง ลิงคืสำหรับรีเซ็ตรหัสผ่าน ไปที่อีเมลของคุณ"
            android:textAlignment="center"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/Text16sp" />

        <EditText
            android:id="@+id/email_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/View32dp"
            android:layout_marginRight="@dimen/View32dp"
            android:background="@drawable/input_field"
            android:hint="Email"
            android:importantForAutofill="no"
            android:inputType="textEmailAddress"
            android:maxLength="30"
            android:paddingLeft="@dimen/View20dp"
            android:paddingTop="@dimen/View8dp"
            android:paddingRight="@dimen/View20dp"
            android:paddingBottom="@dimen/View8dp"
            android:textSize="@dimen/Text16sp" />

        <Button
            android:id="@+id/send_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/View20dp"
            android:layout_marginBottom="@dimen/View8dp"
            android:text="Send"
            android:textColor="@color/cpb_white"
            android:textSize="@dimen/Text16sp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>