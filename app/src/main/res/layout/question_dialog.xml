<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/dialog_round"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
                android:padding="15dp"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginStart="@dimen/View4dp"
                    android:padding="@dimen/View4dp"
                    android:id="@+id/message_QA"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/Text16sp"
                    android:textColor="#000000"
                    android:text="@string/message"/>
                <RadioGroup
                    android:id="@+id/radioGroup_QA"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <RadioButton
                        android:id="@+id/radioButton_QA1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Answer1"/>
                    <RadioButton
                        android:id="@+id/radioButton_QA2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Answer2"/>
                    <RadioButton
                        android:id="@+id/radioButton_QA3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Answer3"/>
                </RadioGroup>
                <TextView
                    android:id="@+id/howImpotant"
                    android:layout_marginStart="@dimen/View4dp"
                    android:padding="@dimen/View4dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/Text16sp"
                    android:textColor="#000000"
                    android:text="@string/qa_improtant"/>
                <RadioGroup
                    android:id="@+id/radioGroup_QAWeight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <RadioButton
                        android:id="@+id/radioButton_QAWeight1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/qa_choice1"/>
                    <RadioButton
                        android:id="@+id/radioButton_QAWeight2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/qa_choice2"/>
                    <RadioButton
                        android:id="@+id/radioButton_QAWeight3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/qa_choice3"/>
                    <RadioButton
                        android:id="@+id/radioButton_QAWeight4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/qa_choice4"/>
                    <RadioButton
                        android:id="@+id/radioButton_QAWeight5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/qa_choice5"/>
                </RadioGroup>
        <LinearLayout
            android:minWidth="400dp"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/View8dp"
            android:padding="@dimen/View4dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <Button
                android:layout_weight="0.1"
                android:layout_marginStart="@dimen/View8dp"
                android:layout_marginEnd="@dimen/View8dp"
                android:theme="@style/Theme.MaterialComponents.buttonLightRed"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:id="@+id/QA_dismiss"
                android:padding="@dimen/View8dp"
                android:text="@string/cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <Button
                android:layout_weight="0.1"
                android:layout_marginStart="@dimen/View8dp"
                android:layout_marginEnd="@dimen/View8dp"
                android:theme="@style/Theme.MaterialComponents.successGreen"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:id="@+id/QA_confirm"
                android:padding="@dimen/View8dp"
                android:text="@string/next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="@dimen/View4dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/page_QA"
                android:textSize="@dimen/Text10sp"
                android:hint="0 / 3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
            </LinearLayout>

</RelativeLayout>