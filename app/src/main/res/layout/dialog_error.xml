<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/cardCorner">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:textStyle="bold"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:text="@string/error_title"
            android:layout_marginTop="@dimen/View24dp"
            android:textSize="@dimen/Text20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:layout_marginTop="@dimen/View12dp"
            android:layout_gravity="center"
            android:background="@drawable/ic_warning2"
            android:layout_width="86dp"
            android:layout_height="86dp"/>
        <TextView
            android:id="@+id/textErrorDialog"
            android:textSize="@dimen/Text14sp"
            android:textAlignment="center"
            android:layout_marginStart="@dimen/View32dp"
            android:layout_marginEnd="@dimen/View32dp"
            android:layout_marginTop="@dimen/View4dp"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:text="@string/primary_profile_alert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Button
            android:layout_marginBottom="@dimen/View24dp"
            android:id="@+id/closeErrorDialog"
            android:layout_marginTop="@dimen/View16dp"
            android:layout_gravity="center"
            android:text="@string/report_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</androidx.cardview.widget.CardView>