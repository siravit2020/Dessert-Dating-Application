<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_marginTop="@dimen/View4dp"
            android:layout_marginEnd="@dimen/View4dp"
            android:layout_weight="0.3"
            android:scaleType="centerCrop"
            android:id="@+id/all_image_1"
            android:background="@drawable/rounded"
            android:layout_width="wrap_content"
            android:layout_height="140dp"/>
        <TextView
            android:id="@+id/matchId_image"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <ImageView
            android:layout_marginTop="@dimen/View4dp"
            android:layout_marginEnd="@dimen/View4dp"
            android:background="@drawable/rounded"
            android:layout_weight="0.3"
            android:scaleType="centerCrop"
            android:id="@+id/all_image_2"
            android:layout_width="wrap_content"
            android:layout_height="140dp"/>
        <TextView
            android:id="@+id/chatId_image"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <ImageView
            android:layout_marginTop="@dimen/View4dp"
            android:background="@drawable/rounded"
            android:id="@+id/all_image_3"
            android:scaleType="centerCrop"
            android:layout_weight="0.3"
            android:layout_width="wrap_content"
            android:layout_height="140dp"/>


    </LinearLayout>

</LinearLayout>